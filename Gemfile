# frozen_string_literal: true

source "https://rubygems.org"

# Cuba es un microframework para aplicaciones web en Ruby.
gem "cuba", "~> 4.0"

# Rack proporciona una interfaz minimalista para desarrollar aplicaciones web en Ruby.
gem "rack", ">= 3.0.0"

# Rackup es una herramienta para iniciar aplicaciones Rack.
gem "rackup"

# BCrypt es una biblioteca para encriptar contraseñas de manera segura.
gem "bcrypt"

# JWT (JSON Web Token) es una biblioteca para crear y verificar tokens JWT.
gem "jwt"

# Puma es un servidor web rápido y concurrente para Ruby/Rack.
gem "puma"

# Sidekiq es una biblioteca para procesamiento de trabajos en segundo plano en Ruby.
gem "sidekiq"

# Redis es un almacén de datos en memoria utilizado por Sidekiq para gestionar colas de trabajos.
gem "redis"

# RuboCop es una herramienta de análisis estático para mejorar la calidad del código Ruby.
gem "rubocop", "~> 1.72", group: :development

# RSpec es un marco de pruebas para Ruby.
gem "rspec", "~> 3.13", group: :test

group :test do
  # Rack::Test es una biblioteca para probar aplicaciones Rack.
  gem "rack-test"
end
